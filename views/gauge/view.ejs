<% if (session.authenticated) { %>
  <ul class="logged-in user-tools">
    <li><a href="/gauges/edit/<%= gauge.id %>" class="button tiny right">Edit</a></li>
  </ul>
<% } %>

<div class="row">

  <div class="small-12 column">
    <header>
      <div class="row">

        <div class="small-12 medium-6 column">
          <h1><%= gauge.name %></h1>
          <p>Updated <%= updated %></p>
        </div>

        <div class="small-12 medium-6 column">
          <canvas id="skycon" class="dark-sky-icon left" data-icon="<%= skycon %>" width="128" height="128" ></canvas>
          <ul class="weather-conditions left">
            <li><span>Condition:</span> <%= weather.currently.summary %></li>
            <li><span>Air Temp:</span> <%= weather.currently.temperature %>&#176;</li>
            <li><span>Cloud Cover:</span> <%= weather.currently.cloudCover * 100 %><small>%</small></li>
            <li><span>Wind Speed:</span> <%= weather.currently.windSpeed %> <small>mph</small></li>
            <li><small><a href="http://forecast.io/">Powered by Forecast</a></small></li>
          </ul>

        </div>

      </div>
    </header>
  </div>

</div>

<div class="row">

  <div class="small-12 column">
    <div class="row metrics">

      <div class="small-12 medium-6 column">
        <span class="tile"><%= height.value %> <small><%= height.unitAbbreviation %></small></span>
      </div>

      <div class="small-12 medium-6 column">
        <span class="tile"><%= flow %> <small>ft&#179;/s</small></span>
      </div>

    </div>
  </div>
</div>

<secton class="charts">
  <div class="chart" data-chart-vars='<%- heightChart %>'></div>
  <div class="chart" data-chart-vars='<%- flowChart %>'></div>
</section>

<script>

  highchartsGlobals = {
    timeZone: '<%- timeZone %>'
  };

</script>




